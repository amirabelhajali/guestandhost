{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form form--flex form--auth js-login-form js-parsley">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="row">
    <div class="form-group">
        <label for="login-username-inline" class="control-label">Nom d'utilisateur</label>
    <div class="form-group"> <input type="text" name="_username" id="username" class="form-control" placeholder="Nom d'utilisateur"  value="{{ last_username }}" required data-parsley-trigger="keyup"> </div>
    </div>
    <div class="form-group">
        <label for="login-password-inline" class="control-label">Mot de passe</label>
        <div class="form-group"> <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required="required"> </div>

    </div>
    </div>
    <div class="row">
        <div class="form__options"><a href="user_restore_pass.html">Mot de passe oubli√© ?</a>
        </div>
    <div class="form-group"> <input type="submit" name="_submit" id="_submit" class="form__submit" value="{{ 'security.login.submit'|trans }}"> </div>
    </div>
    <div class="row">
        <div class="form__options">Vous n'avez pas un compte?<a href="user_register.html">Inscrivez-vous</a>
        </div>
    </div>
</form>
